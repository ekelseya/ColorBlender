<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarRed"
            android:thumbTint="@color/red"
            android:progressTint="@color/red"
            android:max="255"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextRed" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/editTextRed"
            android:inputType="number"
            android:text="@string/startValue"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.94"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.61"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarGreen"
            android:thumbTint="@color/green"
            android:progressTint="@color/green"
            android:max="255"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarRed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextGreen" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.175"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextGreen"
            android:text="0" android:textSize="14sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextRed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.94" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.100000024"/>
    <SeekBar
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:id="@+id/seekBarBlue"
            android:thumbTint="@color/blue"
            android:progressTint="@color/blue"
            android:max="255"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarGreen" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextBlue" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.268"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextBlue"
            android:text="0" android:textSize="14sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextGreen" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.94" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.110000014"/>
    <TextView
            android:text="Red Values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redInfoText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarRed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBarGreen"/>
    <TextView
            android:text="Green Values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/greenInfoText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarGreen" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/seekBarBlue"/>
    <TextView
            android:text="Blue Values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blueInfoText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBarBlue" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.139"/>

</android.support.constraint.ConstraintLayout>